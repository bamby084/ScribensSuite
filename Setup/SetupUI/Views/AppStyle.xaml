<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="FooterBackgroundColor">#0085CA</SolidColorBrush>
    <SolidColorBrush x:Key="ButtonBackgroundColor">#1992cf</SolidColorBrush>
    <SolidColorBrush x:Key="ButtonForegroundColor">White</SolidColorBrush>
    <SolidColorBrush x:Key="BackgroundColor">White</SolidColorBrush>
    <SolidColorBrush x:Key="TextForegroundColor">#526174</SolidColorBrush>

    <Style TargetType="{x:Type Button}">
        <Setter Property="Background" Value="{StaticResource ButtonBackgroundColor}"/>
        <Setter Property="Foreground" Value="{StaticResource ButtonForegroundColor}"/>
        <Setter Property="Height" Value="36"/>
        <Setter Property="Width" Value="100"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>
</ResourceDictionary>