<?xml version="1.0" encoding="utf-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
    <Fragment>
        <UI Id="SetupDialogUI">
            <Binary Id="FooterImage" SourceFile="Images/footer.png" />
            <Binary Id="BackgroundImage" SourceFile="Images/background.png" />
            <Binary Id="LogoImage" SourceFile="Images/logo_red.png" />
            <TextStyle Id="HeaderStyle" FaceName="Tahoma" Size="30" />
            <TextStyle Id="NormalStyle" FaceName="Tahoma" Size="10" />
            <Property Id="DefaultUIFont" Value="TahomaNormal" />

            <Dialog Id="WelcomeDialog" Width="370" Height="270" Title="Scribens">
                <Control Id="Background" Type="Bitmap" Text="BackgroundImage" Width="380" Height="270" X="0" Y="0" TabSkip="no" />
                <Control Id="Logo" Type="Bitmap" Text="LogoImage" X="330" Y="0" Width="30" Height="42" />
                <Control Id="WelcomeText" Type="Text" X="40" Y="60" Width="300" Height="40" Transparent="yes" Text="{\HeaderStyle}Welcome to Scribens" />
                <Control Id="IntroText" Type="Text" X="40" Y="110" Width="298" Height="54" Transparent="yes" NoWrap="no" Text="{\NormalStyle}Scribens corrects over 250 types of grammar mistakes and detects stylistic elements such as repetitions, run-on sentences, redundancies, and more. This spellchecker even suggests synonyms for every word." />
                <Control Id="Footer" Type="Bitmap" Text="FooterImage" Width="380" Height="60" X="0" Y="210" TabSkip="no" />
                <Control Id="StartButton" Type="PushButton" Text="{\NormalStyle}Next" X="190" Y="225" Width="80" Height="30">
                    <Publish Event="EndDialog" Value="Return" />
                </Control>
                <Control Id="CancelButton" Type="PushButton" Text="{\NormalStyle}Cancel" X="280" Y="225" Width="80" Height="30" Cancel="yes">
                    <Publish Event="EndDialog" Value="Exit" />
                </Control>
            </Dialog>
        </UI>
        <InstallUISequence>
            <Show Dialog="WelcomeDialog" Before="ExecuteAction" />
        </InstallUISequence>
    </Fragment>
</Wix>